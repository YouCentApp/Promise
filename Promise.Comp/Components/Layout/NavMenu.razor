<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Youcent App</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="promise">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Send Promises!
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="history">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Transactions History
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="profile">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Profile
            </NavLink>
        </div>
        <div class="nav-item px-3">
            @if (IsSignedIn)
            {
                <NavLink class="nav-link" href="signout">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Sign Out
                </NavLink>
            }
            else
            {
                <NavLink class="nav-link" href="signin">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Sign In
                </NavLink>
            }
        </div>
    </nav>
